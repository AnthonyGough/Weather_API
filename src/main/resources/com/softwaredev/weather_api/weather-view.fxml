         <Label fx:id="country" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="210.0" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-font-family: Arial Rounded MT Bold; -fx-text-fill: #3b0adc; -fx-background-radius: 8px;" textFill="#3b0adc" wrapText="true">
