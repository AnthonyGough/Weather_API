                     <fx:include fx:id="hourlyCard6" source="HourlyForecastCard.fxml" />
                 </HBox>
                 <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                 </padding>
             </VBox>

         </children></VBox>

   </AnchorPane>


